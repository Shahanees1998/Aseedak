    {
      "name": "üéÆ Game Rooms",
      "item": [
        {
          "name": "Create Game Room",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwt_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Game Room\",\n  \"maxPlayers\": 8,\n  \"timeLimit\": 300,\n  \"invitedUsers\": [\"user_id_1\", \"user_id_2\"]\n}"
            },
            "url": {"raw": "{{base_url}}/api/game-rooms/create", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "create"]}
          }
        },
        {
          "name": "Get Game Room",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{jwt_token}}"}],
            "url": {"raw": "{{base_url}}/api/game-rooms/{{room_code}}", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "{{room_code}}"]}
          }
        },
        {
          "name": "Join Game Room",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwt_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {"raw": "{{base_url}}/api/game-rooms/{{room_code}}/join", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "{{room_code}}", "join"]}
          }
        },
        {
          "name": "Start Game",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{jwt_token}}"}],
            "url": {"raw": "{{base_url}}/api/game-rooms/{{room_code}}/start", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "{{room_code}}", "start"]}
          }
        },
        {
          "name": "Get Player Assignments",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{jwt_token}}"}],
            "url": {"raw": "{{base_url}}/api/mobile/game-rooms/{{room_code}}/assignments", "host": ["{{base_url}}"], "path": ["api", "mobile", "game-rooms", "{{room_code}}", "assignments"]}
          }
        },
        {
          "name": "Claim Word",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwt_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"word\": \"hello\"\n}"
            },
            "url": {"raw": "{{base_url}}/api/game-rooms/{{room_code}}/claim-word", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "{{room_code}}", "claim-word"]}
          }
        },
        {
          "name": "Confirm Word Claim",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{jwt_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"claimId\": \"claim_id\",\n  \"confirmed\": true\n}"
            },
            "url": {"raw": "{{base_url}}/api/game-rooms/{{room_code}}/confirm-word-claim", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "{{room_code}}", "confirm-word-claim"]}
          }
        },
        {
          "name": "Leave Game Room",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{jwt_token}}"}],
            "url": {"raw": "{{base_url}}/api/game-rooms/{{room_code}}/leave", "host": ["{{base_url}}"], "path": ["api", "game-rooms", "{{room_code}}", "leave"]}
          }
        }
